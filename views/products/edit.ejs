<% layout('layout/boilerplate') -%>


<div class="row">
    <div class="col-md-6 mx-auto">
        <form action="/products/<%=product._id%>?_method=PATCH" method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Name : </label>
                <input class="form-control" type="text" name="name" id="name" value ="<%=product.name%>">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="img" class="form-label">Image URL</label>
                <input class="form-control" type="text" name="img" id="img" value ="<%=product.img%>">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" name="price" class="form-control" value ="<%=product.price%>" aria-label="Username" aria-describedby="basic-addon1">
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>  
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="desc">Description</label>
                <textarea class="form-control" name="desc" id="desc" rows="5"><%=product.name%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button type="submit" class="btn btn-sm btn-success">Update</button>
        </form>
    </div>
</div>